<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand mb-0 h1" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
        <% if (user) { %>
          <h4>Logged in as: <%= user.email %></h4>
          <form method="POST" action="/logout">
            <button type="submit" style="margin-left: 1em">Logout</button>
          </form>
        <% } else { %>
        <form class="form-inline my-2 my-lg-0">
            <button type="submit" class="btn btn-light" style="margin-left: 10em"><a href="/login">Login</a></button>
            <button type="submit" class="btn btn-light" style="margin-left: 1em"><a href="/register">Register</a></button>
        </form>
        <% } %>
      </div>
      </div>
    </div>
  </nav>
</header>